<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- File Appender for All Logs -->
    <appender name="FILE_ALL" class="ch.qos.logback.core.FileAppender">
        <file>./logs/all_log.log</file>
        <append>true</append>
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            <maxHistory>30</maxHistory>
        </encoder>
    </appender>

    <!-- File Appender for Special Logs -->
    <appender name="FILE_SPECIAL" class="ch.qos.logback.core.FileAppender">
        <file>./logs/info_trace.log</file>
        <append>true</append>
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            <maxHistory>30</maxHistory>
        </encoder>
    </appender>

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root Logger for All Logs -->
    <root level="info">
        <appender-ref ref="FILE_ALL"/>
        <appender-ref ref="CONSOLE"/>
    </root>

    <!-- Logger for Special Logs -->
    <logger name="info_trace" level="info" additivity="false">
        <appender-ref ref="FILE_SPECIAL"/>
    </logger>
</configuration>
